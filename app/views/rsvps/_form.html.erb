<div id="rsvp-area">
  <%= form_for(@rsvp, :validate => true, :remote => true, :html => {:'data-type' => 'json', :'data-update-target' => "rsvp-area", }) do |f| %>
    <% if @rsvp.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@rsvp.errors.count, "error") %> prohibited this rsvp from being saved:</h2>

        <ul>
        <% @rsvp.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <p><%= f.label :name, :class => "label_question" %></p>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <p><%= f.label :email, :class => "label_question" %></p>
      <%= f.text_field :email, :validate => { :uniqueness => false } %>
      <p id="status-message" ></p>
    </div>
    <div class="field">
      <p><%= f.label "Will you come to the Wedding?", :class => "label_question" %></p>
      <%= f.radio_button :presence_wedding, true %> Yes, I've been waiting for 5 years! <br>
      <%= f.radio_button :presence_wedding, false %> No, I waited too long. 
    </div>
    <div class="field">
      <p><%= f.label "Will you also come to the party on Saturday night?", :class => "label_question" %></p>
      <%= f.radio_button :presence_party, true %> Yes, I AM the party.  <br>
      <%= f.radio_button :presence_party, false %> No, I'm lame.  
    </div>
    <div class="field">
      <p><%= f.label :quantity, "How many people will come?", :class => "label_question" %></p>
      <%= f.number_field :quantity %>
    </div>
    <div class="field">
      <%= f.submit "Send RSVP", :disable_with => 'Saving .....' %>
    </div>
  <% end %>
</div>
