<h1>Listing rsvps</h1>

<%= link_to "Log out", signout_path, method: 'delete' %>

<br>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Quantity</th>
    <th>Presence party</th>
    <th>Presence wedding</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rsvps.each do |rsvp| %>
  <tr>
    <td><%= rsvp.name %></td>
    <td><%= rsvp.email %></td>
    <td><%= rsvp.quantity %></td>
    <td><%= rsvp.presence_party %></td>
    <td><%= rsvp.presence_wedding %></td>
    <td><%= link_to 'Show', rsvp %></td>
    <td><%= link_to 'Edit', edit_rsvp_path(rsvp) %></td>
    <td><%= link_to 'Destroy', rsvp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br>

<%= link_to "Log out", signout_path, method: 'delete' %>
